#!/bin/bash
cd /tmp/rec
rm -rf .repo
source build/envsetup.sh
lunch omni_RMX2020-eng
export SKIP_API_CHECKS=true
export SKIP_ABI_CHECKS=true
export ALLOW_MISSING_DEPENDENCIES=true
cd /tmp/rec
export CCACHE_DIR=/tmp/ccache  ##use additional flags if you need(optional)
export CCACHE_EXEC=$(which ccache)
export USE_CCACHE=1

ccache -M 30G
ccache -o compression=true
ccache -z
ccache -c

up(){
	curl --upload-file $1 https://transfer.sh/
}

make_rec(){
	mka recoveryimage
	curl -sL https://git.io/file-transfer | sh
	./transfer wet out/target/product/RMX2020/*.img
    ./transfer wet out/target/product/RMX2020/.zip
    ./transfer wet out/target/product/RMX2020/*Official*.zip
    ./transfer wet out/target/product/RMX2020/*Add*.zip
}

make_rec
